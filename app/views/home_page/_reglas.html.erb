                            <div class="carousel-caption d-lg-none">
                                <h4>9 > 3</h4>
                            </div>
                            <div class="carousel-caption d-none d-lg-block">
                                <h3>9 > 3</h4>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag  "reglas_manos_2-min", class: "d-block w-100" %>
                            <div class="carousel-caption d-lg-none">
                                <h4>Par de Aces > 11</h4>
                            </div>
                            <div class="carousel-caption d-none d-lg-block">
                                <h3>Par de Aces > 11</h4>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag  "reglas_manos_3-min", class: "d-block w-100" %>
                            <div class="carousel-caption d-lg-none">
                                <h4>Par de 6's > Par de 5's</h4>
                            </div>
                            <div class="carousel-caption d-none d-lg-block">
                                <h3>Par de 6's > Par de 5's</h4>
                            </div>
                        </div>
